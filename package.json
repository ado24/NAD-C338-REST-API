{
  "name": "NAD-C338-REST-API",
  "version": "1.0.0",
  "description": "NAD C338 REST API, with Express.js proxy",
  "main": "api-server/server.js",
  "type": "module",
  "scripts": {
    "start-servers": "concurrently \"npm run api-server\" \"npm run tcp-server\"",
    "api-server": "node api-server/server.js",
    "tcp-server": "node tcp-server/server.js",
    "run-test": "jest --coverage",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "workspaces": [
    "api-server",
    "tcp-server"
  ],
  "dependencies": {
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "del": "^8.0.0",
    "gulp": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-babel": "^8.0.0",
    "jest": "^30.0.2",
    "nock": "^14.0.0",
    "node": "^24.0.2",
    "supertest": "^7.0.0"
  }
}
